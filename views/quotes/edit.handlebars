<a class="btn btn-default" href="/quotes/{{quote._id}}">View quote</a>
<form action="/quotes/{{quote._id}}/update" method="post">
	<div class="form-group">
		<label for="quote">Quote</label>
		<textarea name="quote" rows="3" class="form-control">{{quote.quote}}</textarea>
	</div>
	<br>
	<div class="form-group">
		<label for="author">Author</label>
		<input class="form-control" type="text" name="author" value="{{quote.author}}">
	</div>
	<br>
	<div class="form-group">
		<label for="source">Source</label>
		<input class="form-control" type="text" name="source" value="{{quote.source}}">
	</div>
	<button type="submit" class="btn btn-default">Edit Quote</button>
</form>